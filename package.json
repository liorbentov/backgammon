{
  "name": "backgammon",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start-app-dev": "webpack-dev-server --progress --inline",
    "start-dev": "nodemon ./dev/server/index.js --exec babel-node",
    "clean": "cross-env rmdir /s /q .\\output\\",
    "build-app": "webpack --config webpack.config.js --progress --colors",
    "build-server": "babel dev -d output --ignore app,content/index-prod.html --copy-files",
    "start": "cross-env WEBPACK_CONFIG=../../webpack.config.js PORT=4445 NODE_ENV=production node ./output/server/index.js",
    "all": "npm run clean && npm run build-app && npm run build-server && npm run start"
  },
  "author": "Amit Shalev (shamit6)",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.1",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "react": "^15.4.2",
    "react-dnd": "^2.3.0",
    "react-dnd-html5-backend": "^2.3.0",
    "react-dnd-touch-backend": "^0.3.10",
    "react-dom": "^15.4.2",
    "react-player": "^0.18.0",
    "react-redux": "^5.0.3",
    "react-shapes": "^0.1.0",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "webpack": "^2.3.2",
    "webpack-combine-loaders": "^2.0.3",
    "webpack-dev-server": "^2.4.2"
  },
  "devDependencies": {
    "cross-env": "^4.0.0",
    "webpack-hot-middleware": "^2.18.0"
  },
  "description": "Online backgammon game. Play against the top players in the world!"
}
